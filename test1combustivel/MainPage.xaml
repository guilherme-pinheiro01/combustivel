<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="test1combustivel.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">
            <Image
                Source="dotnet_bot.png"
                HeightRequest="185"
                Aspect="AspectFit"
                SemanticProperties.Description="dot net bot in a race car number eight" />

            <Label Text="Valor do Etanol:"/>
            <Entry x:Name="txt_etanol" Placeholder="R$ "/>

            <Label Text="Valor do Gasolina:"/>
            <Entry x:Name="txt_gasolina" Placeholder="R$ "/>
            
            <Button x:Name="Qual é o mais recomendado" Clicked="Button_Clicked"/>
            
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
